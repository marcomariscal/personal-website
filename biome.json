{
	"$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
	"files": {
		"includes": ["src/**/*", "**/*.json", "**/*.md", "!src/routeTree.gen.ts"],
		"ignoreUnknown": false
	},
	"formatter": {
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf",
		"formatWithErrors": true
	},
	"linter": {
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			}
		}
	},
	"css": {
		"parser": {
			"allowWrongLineComments": true,
			"tailwindDirectives": true
		}
	}
}
